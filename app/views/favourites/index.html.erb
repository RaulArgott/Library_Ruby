
<table id="dttb" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Code
      </th>
      <th class="th-sm">Book
      </th>
      <th class="th-sm">Author
      </th>
      <th class="th-sm">Publisher
      </th>
      <th class="th-sm">City
      </th>
      <th class="th-sm">Action
      </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.code %>
      </td>
      <td><%= book.name %>
      </td>
      <td><%= book.author.name %> <%= book.author.last_name %>
      </td>
      <td><%= book.publisher.name %>
      </td>
      <td><%= book.publisher.city %>
      </td>
      <td><div class="btn-group btn-group-justified" role="group" aria-label="Basic example">
      <span class="glyphicon glyphicon-edit"></span>
      <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary btn-sm ' %><%= link_to 'See', book_path(book), class: 'btn btn-primary btn-sm ' %>
      </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>