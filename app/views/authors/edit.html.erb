<%= bootstrap_form_for(@author) do |f| %>
  <%= f.text_field :name, value: @author.name, class: "form-control-lg", label: "Nombre" %>
  <%= f.text_field :last_name, value: @author.last_name, class: "form-control-lg", label: "Apellido" %>
  <%= f.submit "Modificar", class: "button" %>
  <%= button_to 'Borrar', author_path(@author), method: :delete, data: {confirm: 'Estas seguro?'}, class: 'button active' %>
<% end %>
