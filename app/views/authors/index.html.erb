<table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Name
      </th>
      <th class="th-sm">Last Name
      </th>
      <th class="th-sm">Action
      </th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %>
      </td>
      <td><%= author.last_name%>
      </td>
      <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-primary btn-sm btn-block' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>