<% if current_user.admin %> 
  <div class="newloan">
  <%= link_to 'New Loan', new_loan_path, class: 'btn btn-outline-primary btn-lg'%>
  </div>
<% end %>
<br>
<div class="loaned">
  <h2 class="heading-tertiary mb-3">Loaned</h2>
  <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th-sm">Loan Date
        </th>
        <th class="th-sm">Due Date
        </th>
        <th class="th-sm">Book
        </th>
        <th class="th-sm">Borrower
        </th>
        <th class="th-sm">Loan State
        </th>
        <th class="th-sm">Action
        </th>
        <th class="th-sm">Penalty
        </th>
      </tr>
    </thead>
    <tbody>
      <% @loaned.each do |loan| %>
      <tr class="<%= state(loan) %>" >
        <td><%= loan.created_at.to_date %>
        </td>
        <td><%= loan.due_date %>
        </td>
        <td><% loan.book.each do |book| %>
        <p><%= book.name %> </p>
        <% end %>
        </td>
        <td><%= loan.user.email %>
        </td>
        <td><%= loan.loan_state %>
        </td>
        <td><%= link_to  "Details", loan_path(loan) %> 
        </td>
        <td><%= loan.fee  %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
