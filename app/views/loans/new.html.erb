<%= bootstrap_form_for(@loan) do |f| %>
		<% if @loan.errors.any? %>
			<h2>Some things you can fix!</h2>
			<ul>
			<% @loan.errors.full_messages do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		<% end %>
		<%= f.date_field :due_date, min: Date.today,class: "form-control-lg",label: "Fecha de vencimiento"%>
		<%= f.hidden_field :loan_state, value: 'Loaned', class: "form-control-lg"%>
	<%= f.select  :book_ids, @books.collect {|book| [book.code, book.id]}, {}, { multiple: true, class: "selectize" } %>
		<%= f.select :user_id, @users.collect {|user| [user.email, user.id]}, label: "Id usuario"%>
	<%= f.submit "Agregar", class: "button" %>
<% end %>