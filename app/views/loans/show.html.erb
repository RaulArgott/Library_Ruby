<%= link_to 'Atras', loans_path, class: 'btn btn-outline-primary btn-lg' %>
<p>Fecha de vencimiento: <%= @loan.due_date %></p>
<p>Día prestado(s): <%= @loan.created_at.to_date %></p>
<p>Prestado a: <%= @loan.user.email %></p> 
<p>Estado: <%= @loan.loan_state%></p>
<% if @loan.loan_state == 'Delayed'%>
<p>Días: <%= (Date.today - @loan.due_date).to_i %></p>
<% end %>
<% unless @loan.loan_state == 'Returned' %>
<%= link_to  "REGRESADO", return_loan_path(@loan), class: 'btn btn-outline-success btn-lg' %><br>
<% end %>
<table id="example" class="table table-hover table-bordered table-lg" cellspacing="0" width="100%">
  <thead class="thead-dark">
    <tr>
      <th class="th-sm">Libro
    </tr>
  </thead>
  <tbody>
    <% @loan.book.each do |book| %>
    <tr>
      <td><%= book.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>