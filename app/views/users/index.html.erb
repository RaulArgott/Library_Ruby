<h1>Students list</h1>
<table class="table table-hover table-bordered" cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th>User</th>
            <th>Created at</th>
            <th>Admin</th>
            <th>Action</th>
            
        </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.created_at.to_date %>
                </td>
                <td>
                    <%= user.admin %>
                </td>
                <td>
                    <%= link_to  "Delete", users_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-danger" %>
                </td>
            </tr>
            <% end %>
        </tbody>
</table>
<%= link_to  "Nuevo estudiante", 'users_admin/new', class: "btn btn-lg btn-dark" %>
