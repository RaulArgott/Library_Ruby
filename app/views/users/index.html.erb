<h1>Students list</h1>
<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead class="thead-inverse">
        <tr>
            <th>User</th>
            <th>Created at</th>
            <th>Admin</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.created_at.to_date %>
                </td>
                <td>
                    <%= user.admin %>
                </td>
                <td>
                    <%= link_to  "Delete", users_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
            <% end %>
        </tbody>
</table>
<%= link_to  "New", 'users_admin/new' %>
