<br>
<div class="loaned">
  <h2 class="heading-tertiary mb-3">Loaned</h2>
  <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th-sm">Id Prestamo
        </th>
        <th class="th-sm">Due Date
        </th>
        <th class="th-sm">Book
        </th>
        <th class="th-sm">Fee
        </th>
        <th class="th-sm">Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% @penalties.each do |penalty| %>
      <tr class="<%= state(penalty.loan) %>" >
        <td><%= penalty.id %>
        </td>
        <td><%= penalty.loan.due_date %>
        </td>
        <td><% penalty.loan.book.each do |book| %>
        <p><%= book.name %> </p>
        <% end %>
        </td>
        <td><%= penalty.loan.user.email %>
        </td>
        <td><%= link_to  "Details", loan_path(loan) %> 
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>