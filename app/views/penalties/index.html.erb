<br>
<div class="loaned">
  <h2 class="heading-tertiary mb-3">Loaned</h2>
  <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th-sm">Prestamo
        </th>
        <th class="th-sm">Fin de prestamo
        </th>
        <th class="th-sm">Dias de retraso
        </th>
        <th class="th-sm">Estudiante
        </th>
        <th class="th-sm">Cargo
        </th>
        <th class="th-sm">Accion
        </th>
      </tr>
    </thead>
    <tbody>
      <% @penalties.each do |penalty| %>
        <td><%= penalty.loan.id %>
        </td>
        <td><%= penalty.loan.due_date %>
        </td>
        <td><%= (Date.today - penalty.loan.due_date).to_i %>
        </td>
        <td><%= penalty.loan.user.email %>
        </td>
        <td><%= number_to_currency(penalty.fee, :unit => "$") %>
        </td>
        <td><%= link_to  "Details", '#' %> 
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>