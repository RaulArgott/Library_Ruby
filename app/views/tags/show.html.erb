<%if current_user.admin?%>
<h1>Tag: <strong><%= @tag.name %></strong></h1>

<table id="dttb" class="table table-hover table-bordered" cellspacing="0" width="100%">
  <thead class="thead-dark">
    <tr>
      <th class="th-sm">Code
      </th>
      <th class="th-sm">Book
      </th>
      <th class="th-sm">Author
      </th>
      <th class="th-sm">Publisher
      </th>
      <th class="th-sm">City
      </th>
      <th class="th-sm">Action
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tag.book.each do |book| %>
    <tr>
      <td><%= book.code %>
      </td>
      <td><%= book.name %>
      </td>
      <td><%= book.author.name %> <%= book.author.last_name %>
      </td>
      <td><%= book.publisher.name %>
      </td>
      <td><%= book.publisher.city %>
      </td>
      <td><div class="btn-group btn-group-justified" role="group" aria-label="Basic example">
      <span class="glyphicon glyphicon-edit"></span>
      <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary btn-sm ' %><%= link_to 'See', book_path(book), class: 'btn btn-primary btn-sm ' %>
      </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%else%>
  <h1>Tag: <strong><%= @tag.name %></strong></h1>
 <% @tag.book.each do |book| %>
  <div class="blog-list col-lg-12 col-md-6 col-sm-12 mx-auto">

    
    <div class="blog-item">
      <div class="post-title mt-3">
        
          <h3><%= book.name %></h3>
       
      </div>
      <div class="post-content mb-5">
        <p class="mb-5">
          Puedes encontrar este libro en el estante numero <%= book.bookshelf.number%>, lado <%=  book.bookshelf.side%>.
        </p>
        <%= link_to "Ver Libro",  book_path(book), class: 'button' %>
      </div>
      <div class="post-meta mt-5">
        <ul>
          <li>
            <i class="fa fa-user"></i>
            <span>Autor: <%= book.author.name %> <%= book.author.last_name %></span>
          </li>
        </br>
          <li>
            <i class="fa fa-home"></i>
            <span>Editorial: <%= book.publisher.city %></span>
          </li>
        </br>
          <li>
            <i class="fa fa-file"></i>
            <span>Páginas: <%= book.pages %></span>
          </li>
        </br>
          <li>
            <i class="fa fa-qrcode"></i>
            <span>Código: <%= book.code %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <% end %>
<%end%>