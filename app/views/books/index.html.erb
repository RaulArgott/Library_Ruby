<div>
  <h1>Tags</h1>
  <% Tag.all.each do |tag| %>
  <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</div>
<table id="dttb" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Code
      </th>
      <th class="th-sm">Book
      </th>
      <th class="th-sm">Author
      </th>
      <th class="th-sm">Publisher
      </th>
      <th class="th-sm">Updated
      </th>
      <th class="th-sm">Copies/Available
      </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.code, book_path(book)%>
      </td>
      <td><%= link_to book.name, book_path(book)%>
      </td>
      <td><%= link_to book.author.name+" "+book.author.last_name, author_path(book.author) %>
      </td>
      <td><%= book.publisher.name+", "+book.publisher.city%>
      </td>
      <td><%= book.updated_at.strftime("%D %R") %>
      </td>
      <td><%= book.copies %>/<%= book.available %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.admin %>
  <%= link_to 'New', new_book_path%>
<% end %>